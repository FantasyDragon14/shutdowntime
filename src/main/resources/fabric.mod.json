    "issues": "http://github.com/coolsimulations/serverstop/issues/"
  },

  "license": "All Rights Reserved",
  "icon": "logo.png",

  "environment": "server",
  "entrypoints": {
    "main": [
      "net.coolsimulations.ServerStop.ServerStop"
    ]
  },
  
  "mixins": [
    "serverstop.mixins.json"
    ],
    
  "depends": {
    "fabricloader": ">=0.10.8",
    "fabric": "*",
    "minecraft": "1.14.4"
  }
